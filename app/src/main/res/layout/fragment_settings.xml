<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".fragment.SettingsFragment">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/settings_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:text="설정"
            android:textColor="#5b5b5b"
            android:textSize="29sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/settings_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:src="@drawable/ic_settings_line"
        app:layout_constraintTop_toBottomOf="@+id/settings_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="3.06"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_line">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/settings_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="로그아웃"
                android:textColor="#5b5b5b"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/settings_people"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/settings_v1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Warmplant님 환영합니다."
                android:textColor="#aaaaaa"
                android:textSize="11sp"
                app:layout_constraintLeft_toLeftOf="@id/settings_text1"
                app:layout_constraintTop_toBottomOf="@id/settings_text1" />

            <ImageView
                android:id="@+id/settings_v1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="26dp"

                android:src="@drawable/ic_settings_circle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/settings_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile_icon_9"
                app:layout_constraintBottom_toBottomOf="@id/settings_v1"
                app:layout_constraintLeft_toLeftOf="@id/settings_v1"
                app:layout_constraintRight_toRightOf="@id/settings_v1"
                app:layout_constraintTop_toTopOf="@id/settings_v1" />
        </android.support.constraint.ConstraintLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.02"
            android:src="@drawable/ic_settings_line" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/mypot"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/settings_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="내 식물 기르기"
                android:textColor="#5b5b5b"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/settings_pot"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/settings_v2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="식물에 대한 정보를 제공합니다."
                android:textColor="#aaaaaa"
                android:textSize="11sp"
                app:layout_constraintLeft_toLeftOf="@id/settings_text2"
                app:layout_constraintTop_toBottomOf="@id/settings_text2" />

            <ImageView
                android:id="@+id/settings_v2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="26dp"

                android:src="@drawable/ic_settings_circle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/settings_pot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/setting_pot"
                app:layout_constraintBottom_toBottomOf="@id/settings_v2"
                app:layout_constraintLeft_toLeftOf="@id/settings_v2"
                app:layout_constraintRight_toRightOf="@id/settings_v2"
                app:layout_constraintTop_toTopOf="@id/settings_v2" />
        </android.support.constraint.ConstraintLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.02"
            android:src="@drawable/ic_settings_line" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/settings_v3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:src="@drawable/ic_settings_circle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/settings_parent"
                android:src="@drawable/noun_parent_1375546"
                app:layout_constraintBottom_toBottomOf="@id/settings_v3"
                app:layout_constraintLeft_toLeftOf="@id/settings_v3"
                app:layout_constraintRight_toRightOf="@id/settings_v3"
                app:layout_constraintTop_toTopOf="@+id/settings_v3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26sp"
                android:textColor="#5b5b5b"
                android:textStyle="bold"
                android:id="@+id/settings_text3"
                android:layout_marginRight="38dp"
                android:text="보호자 정보"
                app:layout_constraintBottom_toBottomOf="@id/settings_parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/settings_v3"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                app:layout_constraintRight_toRightOf="@id/settings_text3"
                android:textColor="#aaaaaa"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/settings_text3"
                android:text="보호자의 정보를 제공합니다."
                />
        </android.support.constraint.ConstraintLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.02"
            android:src="@drawable/ic_settings_line" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>