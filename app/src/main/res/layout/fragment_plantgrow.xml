<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_background"
    tools:context=".fragment.PlantgrowFragment">

    <TextView
        android:id="@+id/grow_t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="55dp"
        android:text="식물 기르기"
        android:textColor="#ffffff"
        android:textSize="33sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/grow_bg"

        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/grow_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_grow_circle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grow_t1" />
    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/grow_image"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/grow_circle"
        app:layout_constraintLeft_toLeftOf="@id/grow_circle"
        app:layout_constraintRight_toRightOf="@id/grow_circle"
        app:layout_constraintBottom_toBottomOf="@id/grow_circle"
        android:src="@drawable/image_plant"/>

    <ImageView
        android:id="@+id/grow_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="111dp"
        android:src="@drawable/ic_rectangle_11"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grow_t1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="27dp"
        android:id="@+id/grow_t2"
        app:layout_constraintTop_toTopOf="@id/grow_bg"
        app:layout_constraintLeft_toLeftOf="@id/grow_bg"
        android:textColor="#c7c7c7"
        android:text="기르기 시작한 날"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#2fec8b"
        android:layout_marginTop="5dp"
        android:id="@+id/grow_t3"
        app:layout_constraintTop_toBottomOf="@id/grow_t2"
        app:layout_constraintLeft_toLeftOf="@id/grow_t2"
        android:text="2018년 07월 13일"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/grow_t2"
        android:textSize="20sp"
        android:textColor="#c7c7c7"
        android:layout_marginTop="14dp"
        android:id="@+id/grow_t4"
        app:layout_constraintTop_toBottomOf="@id/grow_t3"
        android:text="현재 식물의 상태는"
        />
    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/grow_t2"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="4dp"
        android:id="@+id/grow_t5"
        app:layout_constraintTop_toBottomOf="@id/grow_t4"
        android:textColor="#2fec8b"
        android:text="좋음입니다."
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/grow_t2"
        android:textSize="20sp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/grow_t5"
        android:textColor="#757575"
        android:id="@+id/grow_t6"
        android:text="식물에 대한 정보"
        />
    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/grow_t2"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/grow_t6"
        android:id="@+id/grow_t7"
        android:layout_marginTop="9dp"
        android:textColor="#c7c7c7"
        android:text="이 식물은 우울증 해소를 돕고\n우울증 해소를 도우며, 우울증\n해소에도 도움을 줍니다."
        />


</android.support.constraint.ConstraintLayout>